{
  "name": "gpto-suite",
  "version": "1.0.0",
  "private": true,
  "description": "GPTO Suite - JSON Black Box runtime system for safe, declarative website updates",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/**"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter dashboard dev",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "db:migrate": "pnpm --filter database migrate",
    "db:generate": "pnpm --filter database generate",
    "db:seed": "pnpm --filter database seed",
    "install-pnpm": "curl -fsSL https://get.pnpm.io/install.sh | sh"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
